@using SmartReadmeBuilder.ViewModels;
@model List<PromptViewModel>;

@{
    ViewData["Title"] = "Markdowns";
}

@{

    if (TempData["DeleteSuccess"] != null)
    {
        var timeDeleted = DateTime.UtcNow - (DateTime)TempData["DeletedAt"];
       
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">@TempData["DeleteSuccess"]</strong>
                    <small>@((int)timeDeleted.TotalSeconds) seconds ago</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
               
            </div>
        </div>
    }

    if(TempData["PushSuccess"] != null)
    {
        <div class="toast bg-success position-fixed top-0 end-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
            <div class="toast-header d-flex justify-content-between">
                <small>@DateTime.UtcNow.ToShortTimeString()) minutes ago</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <strong class="me-auto">@TempData["PushSuccess"]</strong>
            </div>
        </div>
    } else if(TempData["PushError"] != null)
    {
        var time = DateTime.UtcNow;
        <div class="toast bg-danger position-fixed top-0 end-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
            <div class="toast-header d-flex justify-content-between">
                <small>@((int)time.Minute) minutes ago</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <strong class="me-auto">@TempData["PushError"]</strong>
            </div>
        </div>
    }

}

<div class="container-fluid">
    <h1 class="display-4">Markdown Logs</h1>
    @* <h2>Manage your Prompts.</h2> *@
        <div class="mt-3">
            <div class="d-flex justify-content-between">
            @if (ViewBag.Prompts != null)
            {
                <div class="prompt-history col-4">
                    <h3>Prompt history</h3>
                    <ul class="list-group">
                        @foreach (var note in (List<Prompt>)ViewBag.Prompts)
                        {
                            <li class="list-group-item">
                                <div class="note-content">
                                    <p>@note.Text</p>
                                    <span class="note-timestamp">@note.CreatedOn.ToString("g")</span>
                                </div>
                                <div>
                                    <form asp-controller="Prompt" asp-action="RegenerateMarkdown">
                                        <input type="hidden" name="id" value="@note.Id" />
                                        <button class="btn btn-secondary btn-sm">Regenerate markdown</button>
                                    </form>

                                    <form asp-controller="Prompt" asp-action="EditPrompt" asp-route-id="@note.Id" method="get" class="float-end">
                                        <input type="hidden" name="id" value="@note.Id" />
                                        <button type="submit" class="btn btn-secondary btn-sm">Edit</button>
                                    </form>
                                    
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletePrompt-@note.Id">
                                        Delete
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="deletePrompt-@note.Id" tabindex="-1" aria-labelledby="deletePrompt-@note.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    @* <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1> *@
                                                    <h4 class="modal-title" id="deletePrompt-@note.Id">Delete Prompt - @note.Text.Substring(0, 15)...</h4>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                   <p>Are you sure you want to delete this prompt? This cannot be undone.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <form asp-controller="Prompt" asp-action="DeletePrompt" method="post" class="float-end">
                                                        <input type="hidden" name="id" value="@note.Id" />
                                                        <button type="submit" class="btn btn-danger">Confirm</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                   
                                </div>
                                
                            </li>
                        }
                    </ul>
                </div>
                <div class="readmes col-7">
                    <h3>Markdowns:</h3>
                    <ul class="list-group">
                        @foreach (var markdown in (List<Prompt>)ViewBag.Prompts)
                        {
                            var modalId = $"githubModal-{markdown.MarkdownId}";
                            
                            <li class="list-group-item">
                                <div class="note-content">
                                    <button class="btn btn-secondary btn-sm pushBtn" data-bs-toggle="modal" data-bs-target="#@modalId">Push to Github</button>
                                    <form asp-controller="Markdown" asp-action="Edit" asp-route-id="@markdown.MarkdownId" method="get">
                                        <input type="hidden" name="Markdowntext" value="@markdown.MarkdownId" />
                                        <button class="btn btn-secondary btn-sm">Edit</button>
                                    </form>
                                   
                                    <button id="copy-btn" class="btn btn-secondary btn-sm">Copy to Clipboard</button>
                                    <pre>@markdown.MarkdownText</pre>
                                    @* <span class="note-timestamp">@note.CreatedOn.ToString("g")</span> *@
                                </div>

                                <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="githubModalLabel-@markdown.MarkdownId">Modal title</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @await Html.PartialAsync("_GithubCredentials", new GitHubInfo() { MarkdownId = @markdown.MarkdownId })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                               
                                @* <form asp-action="DeleteNote" method="post" class="float-end">
                        <input type="hidden" name="id" value="@note.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form> *@
                            </li>
                        }
                    </ul>
                </div>
               
            }
            </div>
           
        </div> 
</div>
@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var toastEl = document.querySelector('.toast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });

         document.getElementById("copy-btn").addEventListener("click", () => copyMarkdownTextToClipboard());

        async function copyMarkdownTextToClipboard() {
          try {
            const markdownText = document.querySelector("pre").innerText;
            await navigator.clipboard.writeText(markdownText);
            alert("Markdown copied to clipboard!");
          } catch (error) {
            console.error(error.message);
            alert("Failed to copy markdown to clipboard. Please try again.");
          }
        }

    </script>

}
