@model Prompt
@{
    ViewData["Title"] = "Update Markdown Prompt";
}

<section id="update-prompt">
    <div class="container mt-5">
        <form asp-action="EditPrompt" asp-controller="Log" method="post">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label asp-for="Text" class="fw-bold fs-2 form-label mb-5">Edit Prompt</label>
                <textarea asp-for="Text" id="markdownText" rows="10"></textarea>
            </div>
            <button type="submit" class="btn btn-outline">Update</button>
            <span asp-validation-for="Text" class="text-danger"></span>
        </form>
    </div>
</section>
